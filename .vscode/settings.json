{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "hidefiles.configurationType": "local",
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**"
    ]
  },
  "hidefiles.globalConfig": {
    "profiles": [
      {
        "name": "Hide Files",
        "detail": "",
        "description": "Hides configuration/cache files",
        "hidden": [
          // frontend
          "frontend/node_modules",
          "frontend/.eslintrc.cjs",
          "frontend/package*",
          "frontend/*config.*",
          "*/vite.config.ts",
          // backend
          "**/go.sum",
          "**/go.mod",
          // parser
          "pmparser/venv",
          "**/__pycache__",
          "**/.pytest_cache",
          "**/downloaded_files",
          "parser/requirements.txt",
          ".style.yapf",
          ".pylintrc",
          "**/*.egg-info",
          // global
          ".gitignore",
          ".vscode/",
        ]
      }
    ]
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "hidefiles.selectedProfile": "Show All Files",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportShadowedImports": "none"
  },
  "python.analysis.typeCheckingMode": "standard",
  "protoc": {
    "options": [
      "--proto_path=${workspaceRoot}/proto"
    ],
  },
  "pylint.ignorePatterns": [
    "**/site-packages/**/*.py",
    ".vscode/*.py",
    "**/protos/**"
  ],
  "python.analysis.extraPaths": [
    "./pmparser/app"
  ],
  "python.testing.pytestArgs": [
    "pmparser/tests",
    "-s",
  ],
  "python.analysis.ignore": [
    "pmparser/app/protos"
  ],
  "go.testEnvFile": "${workspaceFolder}/backend/.env",
  "python.envFile": "${workspaceFolder}/pmparser/.env"
}