{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "JS: NPM Run Dev",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "envFile": "${workspaceFolder}/frontend/vscode.env",
        "env": {
          "DEBUG": "True"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Docker Rebuild",
      "type": "shell",
      "command": "docker compose -f \"docker-compose.yml\" down && docker compose -f \"docker-compose.yml\" up -d --build",
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "problemMatcher": []
    }
  ]
}